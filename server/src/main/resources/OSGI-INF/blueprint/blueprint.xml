<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
           >
	
	<bean id="smtpServer"
		class="com.github.estarter.test.smtp.server.SmtpServerImpl"
		scope="singleton">
	</bean>

	<service ref="smtpServer" interface="javax.servlet.http.HttpServlet">
		<service-properties>
			<entry key="alias" value="/emails" />
		</service-properties>
	</service>

    <cxf:bus id="personServiceBus">
    </cxf:bus>

    <bean id="emailServiceImpl" class="com.github.estarter.test.smtp.server.EmailServiceImpl"/>

<!--
    <jaxws:endpoint
            implementor="#emailServiceImpl"
            address="/emailService"
            implementorClass="com.github.estarter.test.smtp.server.EmailServiceImpl"/>
-->

    <jaxrs:server address="/email" id="emailService">
        <jaxrs:serviceBeans>
            <ref component-id="emailServiceImpl" />
        </jaxrs:serviceBeans>
        <jaxrs:features>
            <cxf:logging />
        </jaxrs:features>
    </jaxrs:server>

    <!--
        <jaxrs:server address="/person" id="personService">
            <jaxrs:serviceBeans>
                <ref component-id="personServiceImpl" />
            </jaxrs:serviceBeans>
            <jaxrs:features>
                <cxf:logging />
            </jaxrs:features>
        </jaxrs:server>
    -->

</blueprint>
