<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
	
	<bean id="smtpServer"
		class="com.github.estarter.test.smtp.server.SmtpServerImpl"
		scope="singleton">
	</bean>

	<service ref="smtpServer" interface="javax.servlet.http.HttpServlet">
		<service-properties>
			<entry key="alias" value="/emails" />
		</service-properties>
	</service>

</blueprint>
