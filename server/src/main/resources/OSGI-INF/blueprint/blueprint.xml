    <jaxrs:server id="emailService" depends-on="tls.engine"
                  address="http://localhost:8080/"
                  publishedEndpointUrl="http://localhost:8080/">
        <jaxrs:serviceBeans>
            <ref component-id="smtpServer" />
        </jaxrs:serviceBeans>
        <jaxrs:features>
            <cxf:logging />
        </jaxrs:features>
        <jaxrs:providers>
        </jaxrs:providers>
    </jaxrs:server>

    <httpj:engine-factory id="tls.engine">
        <httpj:engine port="8080">
        </httpj:engine>
    </httpj:engine-factory>

