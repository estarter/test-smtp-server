<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
           xmlns:httpj="http://cxf.apache.org/transports/http-jetty/configuration"
           >

    <bean id="smtpServer" class="com.github.estarter.test.smtp.server.SmtpServerImpl"/>

	<bean id="emailServer" class="com.github.estarter.test.smtp.server.EmailServiceImpl"/>

    <cxf:bus id="personServiceBus">
    </cxf:bus>

    <jaxrs:server id="emailService" depends-on="tls.engine"
                  address="http://localhost:8080/"
                  publishedEndpointUrl="http://localhost:8080/">
        <jaxrs:serviceBeans>
            <ref component-id="emailServer" />
        </jaxrs:serviceBeans>
        <jaxrs:features>
            <cxf:logging />
        </jaxrs:features>
        <jaxrs:providers>
        </jaxrs:providers>
    </jaxrs:server>

    <httpj:engine-factory id="tls.engine">
        <httpj:engine port="8080">
        </httpj:engine>
    </httpj:engine-factory>

</blueprint>
